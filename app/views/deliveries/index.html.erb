<h2>配送先登録/一覧</h2>
<%= form_with model: @delivery, local: true do |f| %>
  <%= f.label :postcode, '郵便番号（ハイフンなし）' %><br>
  <%= f.text_field :postcode %><br>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address %><br>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <% @deliveries.each do |delivery| %>
    <tbody>
      <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td><%= link_to '編集する', edit_delivery_path(delivery.id) %></td>
        <td><%= link_to '削除する', delivery_path(delivery.id), method: :delete %></td>
      </tr>
    </tbody>
  <% end %>
</table>

