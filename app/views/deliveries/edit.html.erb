<h2>配送先編集</h2>
<%= form_with model: @delivery, local: true do |f| %>
  <%= f.label :postcode, '郵便番号（ハイフンなし）' %><br>
  <%= f.text_field :postcode %><br>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address %><br>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>
