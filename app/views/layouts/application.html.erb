<!DOCTYPE html>
<html>
  <head>
    <title>NaganoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand navbar-dark bg-transparent p-5 border-bottom">
        <div class="container">
          <p>LOGO</p>
        　<ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <%= current_customer.last_name %><span>&emsp;</span><%= current_customer.first_name %>さん
              <li class="nav-item">
                <%= link_to "マイページ", customer_customers_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary ml-5" %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary ml-5" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-outline-secondary ml-5", method: :delete %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary"  %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary ml-4" %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-secondary ml-4" %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_categories_path, class: "btn btn-outline-secondary ml-4" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-outline-secondary ml-4", method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "About", homes_about_path, class: "btn btn-outline-secondary" %>
              </li>
               <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary ml-5" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary ml-5" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary ml-5" %>
              </li>
        　　<% end %>
        　</ul>
        </div><!--container-->
      </nav>
    </div><!--container-fluid-->
    <%= yield %>
    
  <footer class="navbar navbar-expand navbar-dark bg-transparent p-5 fixed-bottom border-top">
  </footer>
  </body>
</html>
