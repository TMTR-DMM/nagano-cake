<div class="container mb-4 h-100">
  <div class="row">
    <div class="col">
      <h2 class="mb-4">商品一覧</h2>
      <table class="table table-bordered table-light font-weight-bold">
        <thead class="bg-dark" style="color:white;">
        <%= link_to "商品追加", new_admin_item_path, class: 'btn btn-success float-right' %>
          <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
          </tr>
          <tbody>
          <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.excluding_price %></td>
                <td><%= item.category.category %></td>
              <% if item.is_deleted == true %>
                  <td>販売中</td>
              <% else %>
                  <td>販売停止中</td>
              <% end %>
              </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
