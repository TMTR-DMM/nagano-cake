<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <!-- admin_customers_show_path(customer) →変更 admin_customer_path(customer) -->
        <td><%= link_to customer.fullname, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
      <% if customer.is_deleted == false %>
        <td>有効</td>
      <% else %>
      <!-- 退会済 →変更　退会 -->
        <td>退会</td>
      <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
<div><%= paginate(@customers) %></div>
