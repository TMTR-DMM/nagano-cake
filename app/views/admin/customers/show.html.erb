<h2><%= @customer.fullname %>さんの会員詳細</h2>
<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %><span>&emsp;</span><%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.kana_last_name %><span>&emsp;</span><%= @customer.kana_first_name %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postcode %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <% if @customer.is_deleted == false %>
      <td>有効</td>
    <% else %>
      <td>退会</td>
    <% end %>
  </tr>
</table>
<%= link_to "編集する", edit_admin_customer_path(@customer) %>
<%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer, order_sort: 0) %>