<h2><%= @customer.fullname %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
  <%= f.label :"会員ID" %>
  <%= f.label :"#{@customer.id}" %><br>
  <%= f.label :"氏名" %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :"フリガナ" %>
  <%= f.text_field :kana_last_name %>
  <%= f.text_field :kana_first_name %><br>
  <%= f.label :"郵便番号" %>
  <%= f.text_field :postcode %><br>
  <%= f.label :"住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :"電話番号" %>
  <%= f.text_field :phone_number %><br>
  <%= f.label :"メールアドレス" %>
  <%= f.text_field :email %><br>
  <%= f.label :"会員ステータス" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効" %><br>
  <%= f.submit "保存を変更" %>
<% end %>

