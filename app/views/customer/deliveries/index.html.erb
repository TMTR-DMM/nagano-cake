<div class="container mb-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4">配送先登録/一覧</h2>
      <%= form_with model: @delivery, local: true do |f| %>
      <div class="form-group">
        <%= f.label :postcode, '郵便番号（ハイフンなし）' %><br>
        <%= f.text_field :postcode, class: "form-control w-25" %><br>
      </div>
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: "form-control w-75" %><br>
      </div>
      <div class="form-group">
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name, class: "form-control w-25" %>
      </div>
        <%= f.submit '新規登録', class: "mb-4" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @deliveries.each do |delivery| %>
          <tbody>
            <tr>
              <td><%= delivery.postcode %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td><%= link_to '編集する', edit_delivery_path(delivery.id) %></td>
              <td><%= link_to '削除する', delivery_path(delivery.id), method: :delete %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>