<div class="top-slide">
  <div class="theTarget">
    <div class="image1"></div>
    <div class="image2"></div>
    <div class="image3"></div>
    <div class="image4"></div>
    <div class="image5"></div>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4"></h2>
    </div>
  </div>
</div>
<div class="container mb-4">
  <div class="row mb-2">
    <% @items.each do |item| %>
      <div class="col-4 mb-2" style="height: 150px;">
        <div class="border-top border-dark pb-4 pt-4 item_border">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, fallback: 'no_image.jpg', size: '100x100', format: 'jpg' %>
        <% end %>
        <div class="d-inline-block ml-2">
        <%= item.name %><br>
        ¥<%= item.excluding_price %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="float-right">
       <%= link_to "全ての商品を見る", items_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>