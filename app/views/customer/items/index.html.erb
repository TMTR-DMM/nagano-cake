<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mb-4">商品一覧<span>(全<%= @items.count %>件)</span></h2>
    </div>
  </div>
</div>
<div class="container mb-4">
  <div class="row mb-2">
    <% @items.each do |item| %>
      <div class="col-4" style="height: 150px;">
        <div class="border-bottom border-dark pb-4 pt-4">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, fallback: 'no_image.jpg', size: '100x100', format: 'jpg', class: '' %>
        <% end %>
        <div class="d-inline-block ml-2">
        <%= item.name %><br>
        ¥<%= item.excluding_price %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div>
       <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
