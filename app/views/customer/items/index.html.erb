<h1>商品一覧<span>(全<%= @items.count %>件)</span></h1>
<div class="container">
  <div class="row mb-2">
    <% @items.each do |item| %>
      <div class="col-3 w-200">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, fallback: 'no_image.jpg', size: '200x150', format: 'jpg', class: '' %>
        <% end %><br>
        <%= item.name %><br>
        <%= item.excluding_price %>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>
