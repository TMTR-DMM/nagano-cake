<%= attachment_image_tag @item, :image, size: '100x100', format: 'jpg' %><br>
<%= @item.name %><br>
<%= @item.caption %>
<span>￥<%= @item.excluding_price %>（税込み）</span>
<%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
  <%= f.select :amount, options_for_select(1..99), {include_blank: '個数選択'} %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.submit "カートに入れる" %>
<% end %>
