<h2>注文情報入力</h2>
<%= form_with model: @order, url: orders_path, local: true, method: :get do |f| %>
  <%= f.label :payment_method, "支払い方法" %><br>
  <%= f.radio_button :payment_method, "クレジットカード" %><span>クレジットカード</span><br>
  <%= f.radio_button :payment_method, "銀行振込" %><span>銀行振込</span><br>
  <%= f.label :address, "お届け先" %><br>
  <%= f.radio_button :address, "ご自身の住所" %><span>ご自身の住所</span><br>
  <span>〒<%= current_customer.postcode %><%= current_customer.address %></span><br>
  <%= current_customer.fullname %><br>
  <span>登録済み住所から選択</span><%= f.collection_select :delivery_id, @deliveries, :id, :address, {prompt: "--選択してください--"} %><br>
  <%= f.radio_button :address, "新しい登録先" %><span>新しい登録先</span><br>
  <%= f.submit '確認画面へ' %>
<% end %>
