<h1>注文履歴一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order) do %>
          <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <td>
          <%# order.order_items.each do |order_item| %>
          <%= order.order_items.sum(:ordered_qty) %>
          <%# end %>
        </td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>
