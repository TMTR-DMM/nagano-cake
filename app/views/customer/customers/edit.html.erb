<h1>会員情報編集</h1>
<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <%= f.label :"氏名" %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :"フリガナ" %>
  <%= f.text_field :kana_last_name %>
  <%= f.text_field :kana_first_name %><br>
  <%= f.label :"郵便番号" %>
  <%= f.text_field :postcode %><br>
  <%= f.label :"住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :"電話番号" %>
  <%= f.text_field :phone_number %><br>
  <%= f.label :"メールアドレス" %>
  <%= f.text_field :email %><br>
  <p>
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", customer_customers_exit_check_path %>
  </p>
<% end %>