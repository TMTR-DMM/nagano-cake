<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="mt-3">会員情報編集</h2>
      <%= form_with model: @customer, url: customer_customers_path, metdod: :patch, local: true do |f| %>
        <table>
          <tr class="form-group">
            <td><%= f.label :"氏名" %></td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </tr>
          <tr class="form-group">
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.text_field :kana_last_name, class: "form-control" %></td>
            <td><%= f.text_field :kana_first_name, class: "form-control" %></td>
          </tr>
          <tr class="form-group">
            <td><%= f.label :"郵便番号" %></td>
            <td><%= f.text_field :postcode, class: "form-control" %></td>
          </tr>
          <tr class="form-group">
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr class="form-group">
            <td><%= f.label :"電話番号" %></td>
            <td><%= f.text_field :phone_number , class: "form-control" %></td>
          </tr>
          <tr class="form-group">
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
        </table>
        <div class="w-50 mx-auto">
          <p class="mt-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>&emsp;
            <%= link_to "退会する", customer_customers_exit_check_path, class: "btn btn-danger" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>