<div class="container">
  <div class="row">
    <div class=" col-12">
      <div class="w-50 mx-auto">
        <h2 class="mt-3">会員情報編集</h2>
        <%= form_with model: @customer, url: customer_customers_path, method: :patch, local: true do |f| %>
          <table>
            <tr>
              <th><%= f.label :"氏名" %></th>
              <td><%= f.text_field :last_name %><span>&emsp;</span></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th><%= f.label :"フリガナ" %></th>
              <td><%= f.text_field :kana_last_name %><span>&emsp;</span></td>
              <td><%= f.text_field :kana_first_name %></td>
            </tr>
            <tr>
              <th><%= f.label :"郵便番号" %></th>
              <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
              <th><%= f.label :"住所" %></th>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <th><%= f.label :"電話番号" %></th>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <th><%= f.label :"メールアドレス" %></th>
              <td><%= f.text_field :email %></td>
            </tr>
          </table>
          <div class="w-50 mx-auto">
            <p class="mt-3">
              <%= f.submit "編集内容を保存", class: "btn btn-outline-secondary mr-2"  %>
              <%= link_to "退会する", customer_customers_exit_check_path, class: "btn btn-outline-secondary" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>