<div class="container h-100">
  <div class="row">
    <div class="col-8  mx-auto">
      <h2 class="mb-4 mt-4">マイページ</h2>
      <div class="mb-4">
        <strong>登録情報</strong>&emsp;
        <%= link_to "編集する", edit_customer_customers_path, class: "btn btn-success" %>
      </div>
      <table class="table table-border" border="2" bgcolor="#fff" bordercolor="#BC8F8F">
        <tr>
          <td bgcolor="#FFEFD5">氏名</td>
          <td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td bgcolor="#FFEFD5">カナ</td>
          <td><%= @customer.kana_last_name %>&emsp;<%= @customer.kana_first_name %></td>
        </tr>
        <tr>
          <td bgcolor="#FFEFD5">郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td bgcolor="#FFEFD5">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td bgcolor="#FFEFD5">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td bgcolor="#FFEFD5">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="mt-3 mb-3">
        <strong class="mt-3 mb-3">配送先<span>&emsp;</span></strong>
        <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %>
      </div>
      <div class="mb-3">
        <strong>注文履歴</strong>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>